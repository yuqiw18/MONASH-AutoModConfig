<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="4dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="4dp">

    <TextView
        android:id="@+id/labelOrderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/ui_label_default_value"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/labelOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="@string/ui_label_default_value"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/labelOrderDatetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/labelOrderName"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/labelOrderName"
        android:text="@string/ui_label_default_value" />

    <TextView
        android:id="@+id/labelOrderPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/labelOrderDatetime"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/labelOrderDatetime"
        android:text="@string/ui_label_default_value" />
</RelativeLayout>