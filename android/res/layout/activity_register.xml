<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yuqi.amc.Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sectionHeader"
                style="@style/Section"
                android:layout_marginTop="0dp"
                android:background="?android:attr/colorButtonNormal"
                android:text="@string/ui_reg_contact_detail"
                android:textColor="#666666" />

            <TableLayout
                android:id="@+id/tableSubSectionOne"
                style="@style/SubView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sectionHeader"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="0dp"
                    android:minHeight="@dimen/height_min">

                    <TextView
                        android:layout_width="@dimen/ui_reg_label_width"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:labelFor="@+id/textRegName"
                        android:text="@string/ui_reg_name" />

                    <EditText
                        android:id="@+id/textRegName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                        android:ems="10"
                        android:inputType="textPersonName" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:minHeight="@dimen/height_min">

                    <TextView
                        android:layout_width="@dimen/ui_reg_label_width"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:labelFor="@+id/textRegAddress"
                        android:text="@string/ui_reg_address" />

                    <EditText
                        android:id="@+id/textRegAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:inputType="textPersonName" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:minHeight="@dimen/height_min">

                    <TextView

                        android:layout_width="@dimen/ui_reg_label_width"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:labelFor="@+id/textRegSuburb"
                        android:text="@string/ui_reg_suburb" />

                    <EditText
                        android:id="@+id/textRegSuburb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:inputType="textPersonName" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:minHeight="@dimen/height_min">

                    <TextView

                        android:layout_width="@dimen/ui_reg_label_width"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:labelFor="@+id/textRegPostcode"
                        android:text="@string/ui_reg_postcode" />

                    <EditText
                        android:id="@+id/textRegPostcode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:inputType="number" />
                </TableRow>


                <TableRow
                    android:layout_width="0dp"
                    android:minHeight="@dimen/height_min">

                    <TextView

                        android:layout_width="@dimen/ui_reg_label_width"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:labelFor="@+id/textRegState"
                        android:text="@string/ui_reg_state" />

                    <EditText
                        android:id="@+id/textRegState"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:inputType="textPersonName" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:minHeight="@dimen/height_min">

                    <TextView

                        android:layout_width="@dimen/ui_reg_label_width"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:labelFor="@+id/spinnerRegCountry"
                        android:text="@string/ui_reg_country" />

                    <Spinner
                        android:id="@+id/spinnerRegCountry"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/country_values"
                        />
                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/sectionHeaderTwo"
                style="@style/Section"
                android:layout_below="@id/tableSubSectionOne"
                android:background="?android:attr/colorButtonNormal"
                android:text="@string/ui_reg_header_login_detail"
                android:textColor="#666666" />

            <TableLayout
                android:id="@+id/tableSubSectionThree"
                style="@style/SubView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sectionHeaderTwo"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="0dp"
                    android:minHeight="@dimen/height_min">

                    <TextView

                        android:layout_width="@dimen/ui_reg_label_width"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:labelFor="@+id/textRegEmail"
                        android:text="@string/ui_reg_email" />

                    <EditText
                        android:id="@+id/textRegEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:inputType="textEmailAddress" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:minHeight="@dimen/height_min">

                    <TextView

                        android:layout_width="@dimen/ui_reg_label_width"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:labelFor="@+id/textRegPassword"
                        android:text="@string/ui_reg_password" />

                    <EditText
                        android:id="@+id/textRegPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:inputType="textPassword" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:minHeight="@dimen/height_min">

                    <TextView

                        android:layout_width="@dimen/ui_reg_label_width"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:labelFor="@+id/textRegPasswordConfirm"
                        android:text="@string/ui_reg_confirm_password" />

                    <EditText
                        android:id="@+id/textRegPasswordConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:inputType="textPassword" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/btnRegRegister"
                style="@style/SubView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tableSubSectionThree"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/ui_reg_button"
                android:textColor="@android:color/white" />

        </RelativeLayout>
    </ScrollView>








</RelativeLayout>
