<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="32dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="32dp">

    <ProgressBar
        android:id="@+id/progressBarTransaction"
        android:layout_width="@dimen/loading_spinner"
        android:layout_height="@dimen/loading_spinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:indeterminate="true" />

    <TextView
        android:id="@+id/labelTransactionResponse"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/loading_spinner"
        android:layout_alignBottom="@+id/progressBarTransaction"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/progressBarTransaction"
        android:gravity="center_vertical"
        android:text="@string/dialog_checkout_process_order"
        android:textSize="18sp" />

</RelativeLayout>